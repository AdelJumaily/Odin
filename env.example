# Odin Database Configuration

# Cloud Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=odin_cloud
DATABASE_USER=odin_user
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=false
DATABASE_CONNECTION_LIMIT=20

# Local Database (SQLite)
LOCAL_DATABASE_PATH=./data/odin_local.db
LOCAL_DATABASE_WAL=true
LOCAL_DATABASE_FOREIGN_KEYS=true

# Application Settings
NODE_ENV=development
PORT=3000

# Optional: S3/MinIO for file storage
STORAGE_PROVIDER=s3
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_BUCKET=odin-files
STORAGE_ACCESS_KEY=your_access_key
STORAGE_SECRET_KEY=your_secret_key
STORAGE_REGION=us-east-1

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Optional: JWT secrets
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
