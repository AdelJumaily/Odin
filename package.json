{
  "name": "odin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:setup": "node scripts/setup-databases.js",
    "db:cloud:migrate": "psql -h $DATABASE_HOST -p $DATABASE_PORT -U $DATABASE_USER -d $DATABASE_NAME -f database/cloud/migrations/001_initial_schema.sql",
    "db:local:migrate": "node -e \"const Database = require('better-sqlite3'); const db = new Database(process.env.LOCAL_DATABASE_PATH); const fs = require('fs'); db.exec(fs.readFileSync('database/local/migrations/001_initial_schema.sql', 'utf8')); db.close();\"",
    "db:health": "node test-db.js",
    "deploy:vercel": "bash scripts/deploy-vercel.sh",
    "deploy:docker": "bash scripts/deploy-docker.sh",
    "docker:build": "docker build -t odin-desktop:latest .",
    "docker:run": "docker run -d --name odin-desktop -p 3000:3000 -v odin_data:/app/data odin-desktop:latest",
    "docker:stop": "docker stop odin-desktop",
    "docker:logs": "docker logs odin-desktop",
    "docker:clean": "docker rm -f odin-desktop && docker rmi odin-desktop:latest"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.0.0-alpha.8",
    "better-sqlite3": "^9.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "dotted-map": "^2.2.3",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.400.0",
    "motion": "^12.23.16",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "pg": "^8.11.3",
    "react": "^19.1.0",
    "react-dom": "19.1.0",
    "react-text-gradients": "^1.0.0-beta.0",
    "tailwind-merge": "^2.6.0",
    "three": "^0.180.0",
    "three-globe": "^2.44.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20",
    "@types/pg": "^8.11.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
